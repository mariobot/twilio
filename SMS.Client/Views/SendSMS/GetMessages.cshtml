@model Twilio.MessageResult

@{
    ViewBag.Title = "GetMessages";
    Layout = "~/Views/Shared/_Skeleton.cshtml";
}

<h2>Lista de mensajes enviados</h2>

<div class="row">
    <div class="twelve columns">
        @if (Model != null)
        {
            <table>
                <tr>
                    <td>ID</td>
                    <td>Destinatario</td>
                    <td>Mensaje</td>
                    <td>Fecha</td>
                    <td>Fecha Actualizacion</td>
                </tr>
                @foreach (var msg in Model.Messages)
                {
                    <tr>
                        <td>@Html.ActionLink("Ver Mas Informacion! ", "GetMessageById", "SendSMS", new { MessageSid = msg.Sid }, null)</td>
                        <td>@msg.To</td>
                        <td width="200px">@msg.Body</td>
                        <td>@msg.DateSent</td>
                        <td>@msg.DateUpdated</td>

                    </tr>
                }
            </table>
        }
        else
        {
            <h2> No hay datos para mostrar...</h2>
        }
    </div>
</div>


